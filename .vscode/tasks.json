{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${workspaceFolder}\\src\\main.cpp",
                "-o",
                "${workspaceFolder}\\main.exe",
                "-lwinhttp",
                "-L${env:SystemRoot}\\System32",
                "-static",
                "-static-libgcc",
                "-static-libstdc++",
                "-Wall",
                "-mwindows" // Compile as a Windows application with no console window
            ],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/c"
                    ]
                },
                "env": {
                    "PATH": "${env:PATH};C:\\MinGW\\bin"
                }
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}